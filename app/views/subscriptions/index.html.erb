<p id="notice"><%= notice %></p>

<h1>Subscriptions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Amount</th>
      <th>Frequency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr class="align-middle">
        <td>
          <%= link_to subscription do %>
            <%= image_tag subscription.brand.image_url(:thumb), class: 'rounded' %>
          <% end %>
        </td>
        <td><%= subscription.amount %></td>
        <td><%= "#{subscription.frequency} #{subscription.units}" %></td>
        <td><%= subscription.unit %></td>
        <td><%= link_to 'Edit', edit_subscription_path(subscription) %></td>
        <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
