<div class="row mb-3">
  <div class="col">
    <%= link_to 'Home', root_path, class: 'btn btn-sm btn-dark' %>
    <%= link_to 'Dashboard', dashboard_index_path, class: 'btn btn-sm btn-dark' %>
    <%= link_to 'Brands', brands_path, class: 'btn btn-sm btn-dark' %>
    <%= link_to 'Subscriptions', subscriptions_path, class: 'btn btn-sm btn-dark' %>
    <div class="float-end">
      <% if Current.user %>
        <%= link_to profile_path do %>
          <img src="<%= Current.user.image %>" alt="profile picture" class="rounded-circle" height="40px">
        <% end %>
      <% else %>
        <%= button_to 'Login', 'auth/auth0', method: :post, class: 'btn btn-sm btn-dark' %>
      <% end %>
    </div>
  </div>
</div>