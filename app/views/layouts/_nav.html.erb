<%= link_to 'Home', root_path, class: 'btn btn-sm btn-dark' %>
<%= link_to 'Brands', brands_path, class: 'btn btn-sm btn-dark' %>
<%= link_to 'Subscriptions', subscriptions_path, class: 'btn btn-sm btn-dark' %>
<% if user_signed_in? %>
  <%= link_to profile_path do %>
    <img src="<%= current_user.dig(:info, :image) %>" alt="profile picture" class="float-end rounded-circle" height="40px">
  <% end %>
<% else %>
  <%= button_to 'Login', 'auth/auth0', method: :post, class: 'btn btn-sm btn-dark float-end' %>
<% end %>