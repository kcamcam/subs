<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Info</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= image_tag brand.image_url(:thumb), class: 'rounded'  %></td>
        <td><%= brand.name %></td>
        <td><%= brand.info %></td>
        <td><%= brand.category %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Create Subscription', new_subscription_path(brand_id: brand.id), class: 'btn btn-sm btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

